{
  "name": "wri-tool-styleguide",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "nucleus-styleguide": "^1.1.0"
  },
  "devDependencies": {
    "node-sass": "^4.5.2"
  },
  "scripts": {
    "styleguide": "nucleus --config config.nucleus.json",
    "sass": "node-sass assets/styles/ -o assets/styles/ --output-style compressed",
    "build": "npm run styleguide && npm run sass",
    "dev": "npm run build && python -m SimpleHTTPServer 8000"
  }
}
